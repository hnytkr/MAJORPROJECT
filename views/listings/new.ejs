<% layout("/layouts/boilerplate") %>

<div class="row">
    <div class="col-8 offset-2 mt-3">
        
        <h3>Add Listing</h3>
        <form method="POST" action="/listings" enctype="multipart/form-data">
            <div class="mb-3">
                <label for="title" class="form-label">Title</label>
                <input name="listing[title]" 
                placeholder="Enter title" 
                type="text"
                class="form-control"
                required>
            </div>
            <div class="mb-3">
                <label for="description" class="form-label">Description</label>
                <textarea name="listing[description]" 
                class="form-control" required></textarea>
            </div>
            <div class="mb-3">
                <label for="Contact" class="form-label">Contact info</label>
                <textarea name="listing[Contact]"
                placeholder="Whatsapp no. or E-mail" 
                class="form-control"></textarea>
            </div>
            <div class="mb-3">
                <label for="image" class="form-label">Upload Image</label>
                <input name="listing[image]" 
                placeholder="Enter image" 
                type="file"
                class="form-control"
                required
                >
            </div>
            <div class="row">
                <div class="mb-3 col-md-4">
                    <label for="Price" class="form-label">Price</label>
                    <input name="listing[price]" 
                    placeholder="1000" 
                    type="number"
                    class="form-control" required>
                </div>
                
                <div class="mb-3 col-md-8">
                    <label for="country" class="form-label">Country</label>
                    <input name="listing[country]" 
                    placeholder="India" 
                    type="text"
                    class="form-control" required>
                </div>

            </div>
            <div class="mb-3">
                <label for="location" class="form-label">Location</label>
                <input name="listing[location]" placeholder="Kullu, H.P" 
                type="text"
                class="form-control" required>
            </div>
            <button class="btn btn-dark add-btn">ADD</button>
    
        </form>
        <br/>
    </div>
</div>

